<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景颜色 -->
    <solid android:color="#CC1E1E1E"/> <!-- 半透明深色 -->

    <!-- 圆角 -->
    <corners android:radius="16dp"/>

    <!-- 内边距阴影模拟（可选） -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"/>
    <gradient
        android:angle="270"
        android:endColor="#CC1E1E1E"
        android:startColor="#CC2A2A2A"/>

    <!-- 阴影边框效果 -->
    <stroke
        android:width="2dp"
        android:color="#33FFFFFF"/> <!-- 半透明白边，高亮感 -->
</shape>
