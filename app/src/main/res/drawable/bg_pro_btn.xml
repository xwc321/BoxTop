<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下 / 聚焦状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FFFF7F00" android:startColor="#FFFFA500" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FFFF8C1A" android:startColor="#FFFFB733" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF1565C0" android:startColor="#FF1E88E5" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
