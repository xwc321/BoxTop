<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallpaper.BuiltInWallPaperFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background">

        <!-- 上下分割线：70% 上半部分预览，30% 下半部分列表 -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <!--默认壁纸-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wall_paper_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_preview"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_preview"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/wall_pager_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 默认标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="默认壁纸"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/wall_paper_container"
            app:layout_constraintTop_toTopOf="@id/wall_paper_container" />

        <!-- 壁纸预览 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wall_pager_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_preview"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/wall_pager_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>


        <!-- 预览标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="预览壁纸"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/wall_pager_container"
            app:layout_constraintTop_toTopOf="@id/wall_pager_container" />

        <TextView
            android:id="@+id/download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="@id/wall_pager_container"
            app:layout_constraintEnd_toEndOf="@id/wall_pager_container" />
        <!-- 壁纸列表背景卡片 -->
        <View
            android:id="@+id/bg_list_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_blur_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_preview" />

        <!-- 壁纸横向列表 -->
        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:id="@+id/tr_wall_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="@id/bg_list_card"
            app:layout_constraintEnd_toEndOf="@id/bg_list_card"
            app:layout_constraintStart_toStartOf="@id/bg_list_card"
            app:layout_constraintTop_toTopOf="@id/bg_list_card"
            app:tv_horizontalSpacingWithMargins="16dp"
            app:tv_isMemoryFocus="false"
            app:tv_isMenu="true"
            app:tv_verticalSpacingWithMargins="16dp"
            tools:listitem="@layout/activity_wall_pager_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>