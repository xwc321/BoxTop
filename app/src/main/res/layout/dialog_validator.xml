<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_premium"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内测授权"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 提示文字 -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="请联系开发者"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- 设备ID -->
    <TextView
        android:id="@+id/tv_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="middle"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="设备ID: 744D67E892A761452C94A45C57EFE07A74067A6ADAC3DE09A4AFF56A1AAB2460"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- 内测结束时间 -->
    <TextView
        android:id="@+id/tv_expire_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="内测结束时间：2026-01-04 00:00:00"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_http"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="http://192.168.0.10:8585"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/address_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_launcher_background" />

    <!-- 右下刷新按钮 -->
    <TextView
        android:id="@+id/tv_refresh_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:background="@drawable/dialog_btn_confirm_selector"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="刷新状态"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>
